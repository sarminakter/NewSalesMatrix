
@{
    ViewBag.Title = "Create";
}

<div ng-app="RoleApp" ng-controller="RoleCreate" class="row">
    <h4 class="text-center form-horizontal">Role Create </h4><hr />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form class="form-horizontal" name="myForm" novalidate>
                <div class="form-group">
                    <label class="control-label">Role Name <a class="requiredStar">*</a></label>
                    <input type="text" class="form-control" name="RoleName" ng-model="role.RoleName" ng-keyup="CheckName(role.RoleName)" placeholder="Enter Role Name" autocomplete="off" required />
                    <span ng-show="myForm.RoleName.$touched && myForm.RoleName.$error.required" style="color:darkred">Enter Role Name</span>
                    <span ng-show="NameExist" style="color:darkred">This role already exist</span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <textarea type="textarea" rows="2" cols="50" name="Description" class="form-control" ng-model="role.Description" placeholder="Enter Role Description" autocomplete="off"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Status <a class="requiredStar">*</a></label>
                    <select ng-model="role_Status" required name="role_Status" class="form-control">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span ng-show="myForm.role_Status.$error.required" style="color:darkred">Select Status</span>
                </div>
                <div class="form-group">
                    @Html.ActionLink("Go To Role List", "Index", null, new { @class = "btn btn-sm btn-info" })
                    <input ng-disabled="myForm.$invalid || buttonDisable" class="btn btn-sm btn-success pull-right" type="submit" ng-click="Create(role)" value="Submit">
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>

</div>
@section RoleJS{
    <script src="~/Application/Controller/Role.js"></script>
}